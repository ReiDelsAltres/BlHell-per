# Запускаемся при пуше в ветку debug
on:
  push:
    branches:
      - debug

# Разрешения нужны только для checkout исходника (destination будет отдельным checkout с PAT)
permissions:
  contents: read

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      # 1) Checkout исходного репо (ветка debug)
      - name: Checkout source (debug)
        uses: actions/checkout@v3
        with:
          ref: debug
          fetch-depth: 0

      # 2) Проверяем наличие секрета
      - name: Validate token
        run: |
          if [ -z "${{ secrets.DEBUG_DEPLOY_TOKEN }}" ]; then
            echo "ERROR: DEBUG_DEPLOY_TOKEN is not set" && exit 1
          fi

      # 3) Checkout целевого репозитория с PAT
      - name: Checkout destination repo
        uses: actions/checkout@v3
        with:
          repository: ReiDelsAltres/BlHell-per-Debug
          token: ${{ secrets.DEBUG_DEPLOY_TOKEN }}
          path: target
          fetch-depth: 0

      # 4) Синхронизируем файлы
      - name: Sync files to target
        run: |
          rsync -av --delete --exclude-from=.gitignore ./ ./target/

      # 5) Коммитим и пушим в ветку main целевого репозитория
      - name: Commit & Push to BlHell-per-Debug:main
        working-directory: target
        run: |
          git config user.name  "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add .
          git commit -m "Deploy from debug: $(date '+%Y-%m-%d %H:%M')" || echo "No changes to commit"
          git push origin HEAD:main --force
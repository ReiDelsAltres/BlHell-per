<MudDrawerContainer>
    <MudHidden Breakpoint="Breakpoint.Xs" Invert>
        <MudAppBar Dense Fixed="false">
            <MudNavLink Icon="@Icons.Material.Filled.Store" Match="NavLinkMatch.All" Href="">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="QuestionViewPage">Questions</MudNavLink>
            <MudSwitch @bind-Value="MainLayout.IsDarkMode" Class="ma-4" T="bool" Label="Toggle Light/Dark Mode" />
        </MudAppBar>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.Xs">
        <MudDrawer ClipMode="DrawerClipMode.Docked" Anchor="Anchor.Start" @bind-Open="@_open" Fixed="false" Elevation="1" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true" Style="position:fixed;">
            <MudDrawerHeader>
                <MudText class="ml-n2">Bl-Hell-per</MudText>
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavLink Icon="@Icons.Material.Filled.Store" Match="NavLinkMatch.All" Href="">Home</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Href="QuestionViewPage">Questions</MudNavLink>
                <MudToggleIconButton Ripple @bind-Toggled="MainLayout.IsDarkMode" ToggledIcon="@Icons.Material.Filled.LightMode" Icon="@Icons.Material.Filled.DarkMode"></MudToggleIconButton>
                <MudSwitch @bind-Value="MainLayout.IsDarkMode" Class="ma-4" T="bool" Label="Toggle Light/Dark Mode" />
            </MudNavMenu>
        </MudDrawer>
    </MudHidden>
    @this.ChildContent
</MudDrawerContainer>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; } 

    private bool _open = false;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}
